{
    "name": "yi-ui",
    "version": "0.2.8",
    "repository": "lq782655835/yi-ui",
    "author": "springleo <782655835@qq.com>",
    "license": "MIT",
    "main": "lib/index.js",
    "files": [
        "dist/*",
        "lib/*",
        "index.js",
        "src/*"
    ],
    "keywords": [
        "vue",
        "vue-component",
        "component",
        "components",
        "ui"
    ],
    "description": "a lightweight ui for vue2.x",
    "husky": {
        "hooks": {
            "pre-commit": "npm run format && git add ."
        }
    },
    "scripts": {
        "dev": "vue-cli-service serve --open",
        "build": "vue-cli-service build --target lib --name YIUI ./src/entry.js",
        "build:site": "site=true vue-cli-service build",
        "release": "npm run build && node ./scripts/public.js",
        "release:site": "npm run build:site && node ./scripts/site.js",
        "format": "prettier --write './**/*.{js,ts,vue,json}'",
        "test:unit": "vue-cli-service test:unit",
        "lint": "vue-cli-service lint --fix",
        "github": "sh ./scripts/deploy.sh"
    },
    "dependencies": {
        "highlight.js": "^9.15.8",
        "material-design-icons": "^3.0.1",
        "popper.js": "^1.15.0",
        "vue": "^2.5.17"
    },
    "devDependencies": {
        "@vue/cli-plugin-babel": "^3.0.3",
        "@vue/cli-plugin-eslint": "^3.0.3",
        "@vue/cli-plugin-unit-jest": "^3.8.0",
        "@vue/cli-service": "^3.0.3",
        "@vue/test-utils": "1.0.0-beta.29",
        "@vusion/md-vue-loader": "1.0.2",
        "babel-core": "7.0.0-bridge.0",
        "babel-eslint": "^10.0.1",
        "babel-jest": "^23.6.0",
        "chalk": "^2.4.2",
        "eslint": "^5.8.0",
        "eslint-plugin-vue": "^5.0.0-0",
        "gh-pages": "^2.0.1",
        "husky": "^1.2.1",
        "node-sass": "^4.10.0",
        "nprogress": "^0.2.0",
        "prettier": "^1.15.3",
        "sass-loader": "^7.1.0",
        "shelljs": "^0.8.3",
        "vue-jest": "^3.0.4",
        "vue-router": "^3.0.7",
        "vue-template-compiler": "^2.5.17"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:vue/essential",
            "eslint:recommended"
        ],
        "rules": {},
        "parserOptions": {
            "parser": "babel-eslint"
        }
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 8"
    ]
}
